<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="@drawable/wallpaper_white">

    <LinearLayout
        android:id="@+id/task_setting_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="<"/>

        <EditText
            android:id="@+id/task_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Task name"
            android:textColor="#000000"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_setting_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/task_setting_1">

        <ImageView
            android:background="@drawable/calender_icon_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/show_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/due_date"
            android:textSize="15sp"
            android:textColor="#4A4A4A"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_setting_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/task_setting_2">

        <ImageView
            android:background="@drawable/alarm_bell_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/show_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/pick_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remind_time"
            android:textColor="#4A4A4A"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_setting_4"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/task_setting_3">

        <EditText
            android:id="@+id/add_content"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:background="@android:drawable/edit_text"
            android:text="@string/note" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_below="@+id/task_setting_4"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Confirm"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_setting_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/navigation_bar" />
    </LinearLayout>

</RelativeLayout>