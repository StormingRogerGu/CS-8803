<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/puzzle_gallery_title"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Puzzle in process"
            android:layout_weight="1"
            android:gravity="center"
            />
        <Button
            android:id="@+id/puzzle_galery_goto_completed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Go to complete puzzle"
            android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/puzzle_continer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/puzzle_gallery_title"
        android:layout_marginBottom="60dp">
        <RelativeLayout
            android:id="@+id/puzzle_pieces_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/maze_layout1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/puzzle_1"
                    android:layout_width="130dp"
                    android:layout_height="100dp"

                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/puzzle_2"
                    android:layout_width="130dp"
                    android:layout_height="100dp"

                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/puzzle_3"
                    android:layout_width="130dp"
                    android:layout_height="100dp"

                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/maze_layout2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/maze_layout1">

                <ImageView
                    android:id="@+id/puzzle_4"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/puzzle_5"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/puzzle_6"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/maze_layout3"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/maze_layout2">

                <ImageView
                    android:id="@+id/puzzle_7"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/puzzle_8"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/puzzle_9"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/puzzle_total_pieces"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/puzzle_total_show"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="390dp"
                android:layout_height="300dp" />

        </RelativeLayout>


    </FrameLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_below="@+id/puzzle_continer"-->
        <!--android:gravity="center">-->

        <!--<Button-->
            <!--android:id="@+id/puzzle_galery_goto_completed"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="20dp"-->
            <!--android:text="Go to completed puzzles"-->
             <!--/>-->
    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/puzzle_highlight"/>
    </LinearLayout>

</RelativeLayout>