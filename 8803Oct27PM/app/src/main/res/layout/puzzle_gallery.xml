<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#D32A2A">

        <TextView
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="154dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/header_logo"
            android:gravity="center" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/puzzle_continer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        android:layout="@+id/puzzle_gallery_title"
        android:background="@drawable/labels_left">

        <TextView
            android:id="@+id/textView"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="In Progress"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/puzzle_galery_goto_completed"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="134dp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="#00000000"
            android:text="Completed"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/puzzle_pieces_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="40dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/maze_layout1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="111dp"
                android:layout_marginLeft="47dp"
                android:layout_marginRight="47dp"
                >

                <ImageView
                    android:id="@+id/puzzle_1"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/puzzle_2"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/puzzle_3"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/maze_layout2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:layout_marginLeft="47dp"
                android:layout_marginRight="47dp"

                android:layout_below="@+id/maze_layout1">

                <ImageView
                    android:id="@+id/puzzle_4"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/puzzle_5"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/puzzle_6"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/maze_layout3"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:layout_marginLeft="47dp"
                android:layout_marginRight="47dp"
                android:layout_below="@+id/maze_layout2">

                <ImageView
                    android:id="@+id/puzzle_7"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/puzzle_8"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/puzzle_9"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"/>
            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/puzzle_total_pieces"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="40dp">
            </LinearLayout>
            <ImageView
                android:id="@+id/puzzle_total_show"
                android:layout_width="390dp"
                android:layout_height="300dp"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="47dp"
                android:layout_marginRight="47dp"
                android:layout_marginBottom="50dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/puzzle_total_pieces2"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-395dp"
            android:orientation="horizontal"
            android:background="@drawable/labels_left2">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/scroll_l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/frame"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="40dp">
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/completed_1"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="37dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="45dp"
                        android:src="@drawable/num0" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/frame"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="40dp">
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/completed_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="45dp"
                        android:src="@drawable/num1" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/scroll_l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/frame"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="40dp">
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/completed_3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="37dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="45dp"
                        android:src="@drawable/num2" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/frame"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="40dp">
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/completed_4"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="45dp"
                        android:src="@drawable/num3" />
                </RelativeLayout>

            </LinearLayout>
            <!--<View-->
                <!--android:id="@+id/dragArea"-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="#FFCC00"-->
                <!--/>-->
        </RelativeLayout>

    </FrameLayout>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
