<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    tools:context = ".MainActivity"
    android:background="@drawable/bg_pic">


    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_profile_l1"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account >"
            android:layout_weight="1"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build Profile >"
            android:textColor="#DC143C"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy >"
            android:textColor="#FFFFFF"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_profile_l1"
        android:id="@+id/signup_profile_l2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company or School"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="13dp"

            />

        <EditText
            android:layout_width="305dp"
            android:layout_height="46dp"
            android:inputType="textAutoComplete"

            android:id="@+id/sign_up_companyschool"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:gravity="top"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_profile_l2"
        android:id="@+id/signup_profile_l3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="13dp"
            />

        <EditText
            android:layout_width="305dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:id="@+id/sign_up_age"
            android:background="@android:drawable/edit_text"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:gravity="top" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_profile_l3"
        android:id="@+id/signup_profile_l4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Level"
            android:textSize="48px"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:background="@drawable/signup_profile_circle"
            android:textColor="#FFFFFF"
            android:textSize="48px"
            android:layout_marginLeft="30dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Little Black Ant"
            android:gravity="center"
            android:background="@drawable/signup_profile_bar"
            android:textColor="#FFFFFF"
            android:textSize="48px"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_profile_l4"
        android:id="@+id/signup_profile_l5"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio_group">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp"
                android:id="@+id/signup_male"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp"
                android:id="@+id/signup_female"/>


        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_profile_l5"
        android:id="@+id/signup_profile_l6"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp">

        <Button
            android:layout_width="305dp"
            android:layout_height="46dp"
            android:text="Complete"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF"
            android:id="@+id/sign_up_complete_btn"
            android:background="#FF5252"/>
    </LinearLayout>








</RelativeLayout>