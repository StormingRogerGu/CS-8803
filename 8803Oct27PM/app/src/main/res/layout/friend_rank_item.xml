<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/friend_rank"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/friand_rank_item_index"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"/>
    <ImageView
        android:id="@+id/friend_rank_item_img"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/friend_rank_item_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="username" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/friend_rank_item_finish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="num_of_finish_puzzle"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left"
                android:text="Pictures"/>
            <TextView
                android:id="@+id/friend_rank_item_ongoing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="num_of_on_going_puzzle"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left"
                android:text="Pieces"/>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>